<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <Button
        android:id="@+id/btnRegisterAdmin"
        android:layout_width="139dp"
        android:layout_height="82dp"
        android:layout_marginTop="100dp"
        android:onClick="btnRegisterAdmin"
        android:text="Register a new account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnMenuOverview"
        android:layout_width="134dp"
        android:layout_height="77dp"
        android:layout_marginTop="60dp"
        android:onClick="btnMenuOverview"
        android:text="Menu"
        app:layout_constraintTop_toBottomOf="@+id/btnRegisterAdmin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp" />
</androidx.constraintlayout.widget.ConstraintLayout>