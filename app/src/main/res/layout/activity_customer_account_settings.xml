<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/txtCustomerDetails_PhoneNumber"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="#00DDC7C7"
        android:backgroundTint="#8E9679"
        android:backgroundTintMode="src_over"
        android:text="Phone Number"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCustomerDetails_Email" />

    <TextView
        android:id="@+id/txtCustomerDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="User Details"
        android:fontFamily="@font/allerta_stencil"
        android:textColor="#3E2723"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePassword" />

    <TextView
        android:id="@+id/txtCustomerDetails_Email"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#00DDC7C7"
        android:backgroundTint="#8E9679"
        android:backgroundTintMode="src_over"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCustomerDetails_FullName" />

    <TextView
        android:id="@+id/txtCustomerDetails_FullName"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Full Name"
        android:background="#00DDC7C7"
        android:backgroundTint="#8E9679"
        android:backgroundTintMode="src_over"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCustomerDetails" />

    <EditText
        android:id="@+id/txtNewPassword"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:background="#00DDC7C7"
        android:backgroundTint="#8E9679"
        android:backgroundTintMode="src_over"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOldPassword" />

    <TextView
        android:id="@+id/txtChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:text="Change Password"
        android:fontFamily="@font/allerta_stencil"
        android:textColor="#3E2723"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtOldPassword"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:textAlignment="center"
        android:background="#00DDC7C7"
        android:backgroundTint="#8E9679"
        android:backgroundTintMode="src_over"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Old Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChangePassword" />

    <TextView
        android:id="@+id/txtCurrentCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current User"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="228dp"
        android:backgroundTint="#8F9779"
        android:fontFamily="@font/allerta_stencil"
        android:onClick="btnChangePassword"
        android:text="Save Changes"
        android:textColor="#3E2723"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCurrentCustomer" />

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#BD4848"
        android:fontFamily="@font/allerta_stencil"
        android:onClick="btnDeleteAccount"
        android:text="Delete Account"
        android:textColor="#3E2723"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#BD4848"
        android:fontFamily="@font/allerta_stencil"
        android:onClick="btnLogOut"
        android:text="Log Out"
        android:textColor="#3E2723"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>